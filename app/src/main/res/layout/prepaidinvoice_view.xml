<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/invoiceNum6"
        android:layout_width="92dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:text="رقم الجوال"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/itemphone"
        app:layout_constraintTop_toBottomOf="@+id/donorName"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="276dp" />

    <TextView
        android:id="@+id/itemphone"
        android:layout_width="234dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="#00574b"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/invoiceNum6"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/donorName"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/invoiceNum5"
        android:layout_width="93dp"
        android:layout_height="29dp"
        android:layout_marginTop="8dp"
        android:text="أسم المتبرع"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/donorName"
        app:layout_constraintTop_toTopOf="@+id/donorName"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="275dp" />

    <TextView
        android:id="@+id/donorName"
        android:layout_width="232dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:textColor="#00574b"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/invoiceNum5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/accept2"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/roundbutton"
        android:text="قبول"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.823"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/decline2"
        android:layout_width="125dp"
        android:layout_height="34dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="104dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/whiteroundbtn"
        android:text="رفض"
        android:textColor="#00574b"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/accept"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/locationbtnadminreq"
        app:layout_constraintVertical_bias="1.0" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="412dp"
        android:layout_height="58dp"
        android:background="#00574b"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/headertxt"
            android:layout_width="158dp"
            android:layout_height="31dp"
            android:layout_marginStart="136dp"
            android:layout_marginTop="16dp"
            android:text=" سند تبرع"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <TextView
        android:id="@+id/InvoiceNum"
        android:layout_width="81dp"
        android:layout_height="23dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="أسم البنك"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bank"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/invoiceNum4"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/invoiceNum4"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="تاريخ الايصال"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="278dp"
        tools:layout_editor_absoluteY="274dp" />

    <TextView
        android:id="@+id/invoiceNum3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="12dp"
        android:text="رقم الايصال"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/InvoiceNm2"
        app:layout_constraintTop_toBottomOf="@+id/donationamount2" />

    <TextView
        android:id="@+id/date"
        android:layout_width="256dp"
        android:layout_height="32dp"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="#00574b"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="272dp" />

    <TextView
        android:id="@+id/bank"
        android:layout_width="269dp"
        android:layout_height="28dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:textColor="#00574b"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date" />

    <TextView
        android:id="@+id/bank2"
        android:layout_width="0dp"
        android:layout_height="26dp"
        android:layout_marginEnd="13dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:textColor="#00574b"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/Program"
        app:layout_constraintEnd_toStartOf="@+id/Program"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/InvoiceNm2"
        android:layout_width="255dp"
        android:layout_height="32dp"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="#00574b"
        android:textSize="16sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="218dp" />

    <TextView
        android:id="@+id/donationamount"
        android:layout_width="91dp"
        android:layout_height="28dp"
        android:layout_marginBottom="27dp"
        android:layout_marginTop="8dp"
        android:text="قيمة التبرع"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/invoiceNum3"
        app:layout_constraintTop_toTopOf="@+id/donationamount2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="277dp" />

    <TextView
        android:id="@+id/Program"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:text="المشروع الذي ترغب في التبرع له"
        android:textAlignment="center"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bank" />

    <TextView
        android:id="@+id/riyaltxt"
        android:layout_width="0dp"
        android:layout_height="29dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="164dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:text="ريال"
        android:textColor="#00574b"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/donationamount2"
        app:layout_constraintEnd_toStartOf="@+id/donationamount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/donationamount2"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/donationamount2"
        android:layout_width="129dp"
        android:layout_height="34dp"
        android:layout_marginEnd="32dp"
        android:ems="10"
        android:textAlignment="textEnd"
        android:textColor="#00574b"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/donationamount"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="172dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="12dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/donationamount2"
        app:layout_constraintEnd_toStartOf="@+id/itemphone"
        app:layout_constraintGuide_begin="82dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

</android.support.constraint.ConstraintLayout>